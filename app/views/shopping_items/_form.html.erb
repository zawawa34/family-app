<%# 商品追加フォーム %>
<%= form_with(model: item, url: shopping_list_items_path(shopping_list), id: "new_item_form", class: "bg-white p-4 md:p-6 border-b border-stone-200") do |f| %>
  <div class="flex flex-col gap-3">
    <%# エラーメッセージ %>
    <% if item.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg text-sm">
        <ul class="list-disc list-inside">
          <% item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# 商品名入力フィールド %>
    <div class="flex gap-2">
      <%= f.text_field :name,
          placeholder: "商品名を入力してEnter",
          autofocus: true,
          class: "flex-1 px-4 py-3 text-base border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200 min-h-[44px]" %>
      <%= f.submit "追加",
          class: "px-6 py-3 bg-orange-500 text-white font-semibold rounded-lg hover:bg-orange-600 active:bg-orange-700 transition-colors duration-150 min-h-[44px] min-w-[44px]" %>
    </div>
  </div>
<% end %>
