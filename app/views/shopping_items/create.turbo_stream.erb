<%# 成功時: 商品をリストに追加し、フォームをクリア %>
<%# 空の状態メッセージを削除 %>
<%= turbo_stream.remove "empty_state" %>

<%# 商品をリストに追加 %>
<%= turbo_stream.append "shopping_items_list" do %>
  <%= render partial: "shopping_items/item", locals: { item: @item } %>
<% end %>

<%= turbo_stream.replace "new_item_form" do %>
  <%= render partial: "shopping_items/form", locals: { shopping_list: @shopping_list, item: @shopping_list.items.build } %>
<% end %>

<%# 成功メッセージ %>
<%= turbo_flash_success("「#{@item.name}」を追加しました") %>
