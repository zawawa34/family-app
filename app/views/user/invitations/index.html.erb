<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">招待管理</h1>

  <div class="mb-6">
    <%= form_with url: invitations_path, method: :post, class: "mb-4" do |f| %>
      <%= f.submit "新しい招待リンクを作成", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">招待トークン</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">招待URL</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">有効期限</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ステータス</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">作成日時</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @invitations.each do |invitation| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= invitation.token[0..10] %>...
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <% invitation_url = new_user_database_authentication_registration_url(invitation_token: invitation.token) %>
              <a href="<%= invitation_url %>" class="text-blue-600 hover:underline" target="_blank">
                <%= invitation_url[0..50] %>...
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= invitation.expires_at.strftime('%Y-%m-%d %H:%M') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if invitation.used? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  使用済み
                </span>
              <% elsif invitation.expires_at < Time.current %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  期限切れ
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  未使用
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= invitation.created_at.strftime('%Y-%m-%d %H:%M') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @invitations.empty? %>
      <div class="text-center py-8 text-gray-500">
        招待がまだ作成されていません
      </div>
    <% end %>
  </div>
</div>
