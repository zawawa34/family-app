<div class="min-h-screen bg-stone-50">
  <!-- ヘッダー -->
  <div class="bg-white border-b border-stone-200">
    <div class="max-w-7xl mx-auto px-4 py-6 md:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-stone-900 leading-tight">招待管理</h1>
          <p class="text-base text-stone-600 mt-1">家族メンバーを招待してアカウントを作成できます</p>
        </div>

        <%= form_with url: invitations_path, method: :post do |f| %>
          <%= f.submit "新しい招待リンクを作成",
            class: "bg-orange-400 hover:bg-orange-500 active:bg-orange-600 text-white font-semibold px-6 py-3 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 ease-out active:scale-95 focus:outline-none focus:ring-4 focus:ring-orange-200 min-h-[44px]" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <div class="max-w-7xl mx-auto px-4 py-6 md:px-6 lg:px-8">
    <% if @invitations.empty? %>
      <!-- 空の状態 -->
      <div class="bg-white rounded-xl shadow-sm border border-stone-100 p-8 md:p-12 text-center">
        <div class="max-w-md mx-auto">
          <svg class="w-16 h-16 text-stone-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <h2 class="text-xl font-semibold text-stone-800 mb-2">招待がまだ作成されていません</h2>
          <p class="text-base text-stone-600 mb-6">上のボタンから新しい招待リンクを作成して、家族メンバーを招待しましょう。</p>
          <%= form_with url: invitations_path, method: :post do |f| %>
            <%= f.submit "最初の招待リンクを作成",
              class: "bg-orange-400 hover:bg-orange-500 active:bg-orange-600 text-white font-semibold px-8 py-3 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 ease-out active:scale-95 focus:outline-none focus:ring-4 focus:ring-orange-200 min-h-[44px]" %>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- 招待リスト -->
      <div class="bg-white rounded-xl shadow-sm border border-stone-100 overflow-hidden">
        <!-- モバイル: カード表示 -->
        <div class="md:hidden divide-y divide-stone-200">
          <% @invitations.each do |invitation| %>
            <div class="p-4 space-y-3">
              <!-- ステータスバッジ -->
              <div class="flex items-center justify-between">
                <span class="text-sm font-semibold text-stone-700">招待リンク</span>
                <% if invitation.used? %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-stone-100 text-stone-700">
                    使用済み
                  </span>
                <% elsif invitation.expires_at < Time.current %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-700">
                    期限切れ
                  </span>
                <% else %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-teal-100 text-teal-700">
                    未使用
                  </span>
                <% end %>
              </div>

              <!-- 招待トークン -->
              <div>
                <p class="text-xs text-stone-500 mb-1">トークン</p>
                <p class="text-sm text-stone-800 font-mono break-all"><%= invitation.token[0..15] %>...</p>
              </div>

              <!-- 招待URL -->
              <div>
                <p class="text-xs text-stone-500 mb-1">招待URL</p>
                <% invitation_url = new_user_database_authentication_registration_url(invitation_token: invitation.token) %>
                <div class="flex flex-col gap-2" data-controller="clipboard" data-clipboard-content-value="<%= invitation_url %>">
                  <p class="text-sm text-stone-700 font-mono break-all bg-stone-50 p-2 rounded border border-stone-200">
                    <%= invitation_url %>
                  </p>
                  <button type="button"
                          data-action="click->clipboard#copy"
                          class="flex items-center justify-center gap-2 bg-teal-500 hover:bg-teal-600 active:bg-teal-700 text-white font-semibold px-4 py-2 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 ease-out active:scale-[0.98] focus:outline-none focus:ring-4 focus:ring-teal-200 min-h-[44px]">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    URLをコピー
                  </button>
                </div>
              </div>

              <!-- 日時情報 -->
              <div class="grid grid-cols-2 gap-3 pt-2 border-t border-stone-100">
                <div>
                  <p class="text-xs text-stone-500 mb-1">有効期限</p>
                  <p class="text-sm text-stone-700"><%= invitation.expires_at.strftime('%Y/%m/%d %H:%M') %></p>
                </div>
                <div>
                  <p class="text-xs text-stone-500 mb-1">作成日時</p>
                  <p class="text-sm text-stone-700"><%= invitation.created_at.strftime('%Y/%m/%d %H:%M') %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- デスクトップ: テーブル表示 -->
        <div class="hidden md:block overflow-x-auto">
          <table class="min-w-full divide-y divide-stone-200">
            <thead class="bg-stone-50">
              <tr>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-stone-700 uppercase tracking-wide">
                  招待トークン
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-stone-700 uppercase tracking-wide">
                  招待URL
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-stone-700 uppercase tracking-wide">
                  有効期限
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-stone-700 uppercase tracking-wide">
                  ステータス
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-stone-700 uppercase tracking-wide">
                  作成日時
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-stone-200">
              <% @invitations.each do |invitation| %>
                <tr class="hover:bg-stone-50 transition-colors duration-150">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-800 font-mono">
                    <%= invitation.token[0..10] %>...
                  </td>
                  <td class="px-6 py-4 text-sm">
                    <% invitation_url = new_user_database_authentication_registration_url(invitation_token: invitation.token) %>
                    <div class="flex items-center gap-2" data-controller="clipboard" data-clipboard-content-value="<%= invitation_url %>">
                      <span class="text-stone-700 font-mono break-all flex-1"><%= invitation_url %></span>
                      <button type="button"
                              data-action="click->clipboard#copy"
                              class="flex-shrink-0 flex items-center justify-center gap-1 bg-teal-500 hover:bg-teal-600 active:bg-teal-700 text-white font-semibold px-3 py-1.5 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 ease-out active:scale-[0.98] focus:outline-none focus:ring-4 focus:ring-teal-200 text-xs whitespace-nowrap">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        コピー
                      </button>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-700">
                    <%= invitation.expires_at.strftime('%Y/%m/%d %H:%M') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if invitation.used? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-stone-100 text-stone-700">
                        使用済み
                      </span>
                    <% elsif invitation.expires_at < Time.current %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-700">
                        期限切れ
                      </span>
                    <% else %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-teal-100 text-teal-700">
                        未使用
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-700">
                    <%= invitation.created_at.strftime('%Y/%m/%d %H:%M') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- 説明 -->
      <div class="mt-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <p class="text-sm font-semibold text-amber-800 mb-1">招待リンクについて</p>
            <ul class="text-sm text-amber-700 space-y-1">
              <li>• 招待リンクは作成から<strong>7日間</strong>有効です</li>
              <li>• 各招待リンクは<strong>1回のみ</strong>使用できます</li>
              <li>• 招待URLをコピーして家族メンバーに共有してください</li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
