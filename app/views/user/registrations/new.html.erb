<div class="min-h-screen flex items-center justify-center bg-stone-50 px-4 py-8">
  <div class="w-full max-w-md">
    <!-- ロゴ・ヘッダー部分 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-stone-900 leading-tight mb-2">
        Family App
      </h1>
      <p class="text-base text-stone-600">
        招待を受けてアカウントを作成
      </p>
    </div>

    <!-- 登録カード -->
    <div class="bg-white rounded-xl shadow-sm border border-stone-100 p-6 md:p-8">
      <h2 class="text-2xl font-semibold text-stone-800 mb-6">
        アカウント登録
      </h2>

      <!-- エラーメッセージ -->
      <% if resource.errors.any? %>
        <div class="mb-6 p-4 bg-red-50 border-2 border-red-200 rounded-lg" role="alert">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="flex-1">
              <h3 class="text-sm font-semibold text-red-800 mb-2">
                <%= I18n.t("errors.messages.not_saved",
                           count: resource.errors.count,
                           resource: resource.class.model_name.human.downcase) %>
              </h3>
              <ul class="list-disc list-inside space-y-1">
                <% resource.errors.full_messages.each do |message| %>
                  <li class="text-sm text-red-700"><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <!-- メールアドレス -->
        <div class="space-y-2">
          <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-stone-700" %>
          <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "your@email.com",
            class: "w-full px-4 py-3 text-base text-stone-800 placeholder-stone-400 bg-white border-2 #{resource.errors[:email].any? ? 'border-red-500' : 'border-stone-200'} rounded-lg transition-all duration-200 focus:outline-none focus:border-orange-400 focus:ring-4 focus:ring-orange-100 min-h-[44px]" %>
          <% if resource.errors[:email].any? %>
            <p class="text-sm text-red-500 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= resource.errors[:email].first %>
            </p>
          <% end %>
        </div>

        <!-- パスワード -->
        <div class="space-y-2">
          <%= f.label :password do %>
            <span class="block text-sm font-semibold text-stone-700">
              パスワード
              <% if @minimum_password_length %>
                <span class="text-xs font-normal text-stone-500">（<%= @minimum_password_length %>文字以上）</span>
              <% end %>
            </span>
          <% end %>
          <%= f.password_field :password,
            autocomplete: "new-password",
            placeholder: "••••••••",
            class: "w-full px-4 py-3 text-base text-stone-800 placeholder-stone-400 bg-white border-2 #{resource.errors[:password].any? ? 'border-red-500' : 'border-stone-200'} rounded-lg transition-all duration-200 focus:outline-none focus:border-orange-400 focus:ring-4 focus:ring-orange-100 min-h-[44px]" %>
          <% if resource.errors[:password].any? %>
            <p class="text-sm text-red-500 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= resource.errors[:password].first %>
            </p>
          <% end %>
        </div>

        <!-- パスワード確認 -->
        <div class="space-y-2">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-semibold text-stone-700" %>
          <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            placeholder: "••••••••",
            class: "w-full px-4 py-3 text-base text-stone-800 placeholder-stone-400 bg-white border-2 #{resource.errors[:password_confirmation].any? ? 'border-red-500' : 'border-stone-200'} rounded-lg transition-all duration-200 focus:outline-none focus:border-orange-400 focus:ring-4 focus:ring-orange-100 min-h-[44px]" %>
          <% if resource.errors[:password_confirmation].any? %>
            <p class="text-sm text-red-500 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= resource.errors[:password_confirmation].first %>
            </p>
          <% end %>
        </div>

        <!-- 登録ボタン -->
        <div class="pt-2">
          <%= f.submit "アカウントを作成",
            class: "w-full bg-orange-400 hover:bg-orange-500 active:bg-orange-600 text-white font-semibold px-6 py-3 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 ease-out active:scale-95 focus:outline-none focus:ring-4 focus:ring-orange-200 disabled:opacity-50 disabled:cursor-not-allowed min-h-[44px]" %>
        </div>
      <% end %>

      <!-- リンク -->
      <div class="mt-6 pt-6 border-t border-stone-200">
        <p class="text-sm text-stone-600 text-center">
          すでにアカウントをお持ちですか？
          <%= link_to "ログイン", new_user_database_authentication_session_path,
            class: "text-orange-500 hover:text-orange-600 font-semibold transition-colors duration-200" %>
        </p>
      </div>
    </div>

    <!-- フッター -->
    <div class="text-center mt-6">
      <p class="text-xs text-stone-500">
        © 2025 Family App. All rights reserved.
      </p>
    </div>
  </div>
</div>
