<%# フラッシュメッセージのパーシャル %>
<%
  # メッセージタイプに応じたスタイル設定
  styles = case type
  when :success
    {
      bg: 'bg-green-50',
      border: 'border-green-200',
      text: 'text-green-800',
      icon_path: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
    }
  when :error
    {
      bg: 'bg-red-50',
      border: 'border-red-200',
      text: 'text-red-800',
      icon_path: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z'
    }
  when :warning
    {
      bg: 'bg-yellow-50',
      border: 'border-yellow-200',
      text: 'text-yellow-800',
      icon_path: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'
    }
  when :info
    {
      bg: 'bg-blue-50',
      border: 'border-blue-200',
      text: 'text-blue-800',
      icon_path: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
    }
  else
    {
      bg: 'bg-stone-50',
      border: 'border-stone-200',
      text: 'text-stone-800',
      icon_path: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
    }
  end
%>

<div class="<%= styles[:bg] %> border <%= styles[:border] %> <%= styles[:text] %> px-4 py-3 rounded-lg mb-4 flex items-center gap-3"
     role="alert"
     data-controller="flash-dismiss"
     data-flash-dismiss-delay-value="5000">
  <%# アイコン %>
  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= styles[:icon_path] %>" />
  </svg>

  <%# メッセージ %>
  <p class="font-medium flex-1"><%= message %></p>

  <%# 閉じるボタン %>
  <button type="button"
          class="flex-shrink-0 inline-flex items-center justify-center w-6 h-6 rounded-lg hover:bg-black/5 transition-colors"
          data-action="click->flash-dismiss#dismiss"
          aria-label="閉じる">
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>
</div>
