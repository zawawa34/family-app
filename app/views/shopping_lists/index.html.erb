<div class="min-h-screen bg-stone-50">
  <!-- ヘッダー -->
  <div class="bg-white border-b border-stone-200">
    <div class="max-w-7xl mx-auto px-4 py-6 md:px-6 lg:px-8">
      <div class="flex flex-col gap-2">
        <h1 class="text-3xl font-bold text-stone-900 leading-tight">買い物リスト</h1>
        <p class="text-base text-stone-600">
          <%= @shopping_list.unpicked_items_count %>件の商品 / <%= @shopping_list.picked_items_count %>件をカートに追加済み
        </p>
      </div>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <div class="max-w-7xl mx-auto px-4 py-6 md:px-6 lg:px-8">
    <% if @items.empty? %>
      <!-- 空の状態 -->
      <div class="bg-white rounded-xl shadow-sm border border-stone-100 p-8 md:p-12 text-center">
        <div class="max-w-md mx-auto">
          <svg class="w-16 h-16 text-stone-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h2 class="text-xl font-semibold text-stone-800 mb-2">買い物リストが空です</h2>
          <p class="text-base text-stone-600">商品を追加して買い物を始めましょう。</p>
        </div>
      </div>
    <% else %>
      <!-- 商品リスト -->
      <div class="bg-white rounded-xl shadow-sm border border-stone-100 overflow-hidden">
        <div class="divide-y divide-stone-200">
          <% @items.each do |item| %>
            <div class="<%= item.picked? ? 'shopping-item picked bg-stone-50' : 'shopping-item unpicked' %> p-4 hover:bg-stone-50 transition-colors duration-150 min-h-[44px] flex items-center">
              <div class="flex-1">
                <!-- 商品名 -->
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="text-base font-semibold <%= item.picked? ? 'text-stone-500 line-through' : 'text-stone-900' %>">
                    <%= item.name %>
                  </h3>
                  <% if item.picked? %>
                    <span class="px-2 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-stone-200 text-stone-600">
                      カート内
                    </span>
                  <% end %>
                </div>

                <!-- 商品情報 -->
                <div class="flex flex-wrap items-center gap-3 text-sm text-stone-600">
                  <% if item.quantity.present? %>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                      </svg>
                      <span><%= item.quantity %></span>
                    </div>
                  <% end %>

                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <% if item.store_name.present? %>
                      <span><%= item.store_name %></span>
                    <% else %>
                      <span class="text-amber-600 font-medium">店舗未設定</span>
                    <% end %>
                  </div>

                  <% if item.memo.present? %>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                      </svg>
                      <span><%= item.memo %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
