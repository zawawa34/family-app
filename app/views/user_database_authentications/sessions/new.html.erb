<div class="min-h-screen flex items-center justify-center bg-stone-50 px-4 py-8">
  <div class="w-full max-w-md">
    <!-- ロゴ・ヘッダー部分 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-stone-900 leading-tight mb-2">
        Family App
      </h1>
      <p class="text-base text-stone-600">
        ログインして家族の空間にアクセス
      </p>
    </div>

    <!-- ログインカード -->
    <div class="bg-white rounded-xl shadow-sm border border-stone-100 p-6 md:p-8">
      <h2 class="text-2xl font-semibold text-stone-800 mb-6">
        ログイン
      </h2>

      <!-- エラーメッセージ（Devise alert表示） -->
      <% if alert.present? %>
        <div class="mb-6 p-4 bg-red-50 border-2 border-red-200 rounded-lg" role="alert">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="flex-1">
              <p class="text-sm font-medium text-red-800"><%= alert %></p>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <!-- メールアドレス -->
        <div class="space-y-2">
          <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-stone-700" %>
          <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "your@email.com",
            class: "w-full px-4 py-3 text-base text-stone-800 placeholder-stone-400 bg-white border-2 border-stone-200 rounded-lg transition-all duration-200 focus:outline-none focus:border-orange-400 focus:ring-4 focus:ring-orange-100 disabled:bg-stone-100 disabled:cursor-not-allowed min-h-[44px]" %>
        </div>

        <!-- パスワード -->
        <div class="space-y-2">
          <%= f.label :password, "パスワード", class: "block text-sm font-semibold text-stone-700" %>
          <%= f.password_field :password,
            autocomplete: "current-password",
            placeholder: "••••••••",
            class: "w-full px-4 py-3 text-base text-stone-800 placeholder-stone-400 bg-white border-2 border-stone-200 rounded-lg transition-all duration-200 focus:outline-none focus:border-orange-400 focus:ring-4 focus:ring-orange-100 disabled:bg-stone-100 disabled:cursor-not-allowed min-h-[44px]" %>
        </div>

        <!-- ログイン状態を保持 -->
        <% if devise_mapping.rememberable? %>
          <label class="flex items-center gap-3 cursor-pointer min-h-[44px] py-2">
            <%= f.check_box :remember_me,
              class: "w-6 h-6 text-teal-500 bg-white border-2 border-stone-300 rounded transition-all duration-200 focus:ring-4 focus:ring-teal-100 cursor-pointer" %>
            <span class="text-base text-stone-800 select-none">ログイン状態を保持する</span>
          </label>
        <% end %>

        <!-- ログインボタン -->
        <div class="pt-2">
          <%= f.submit "ログイン",
            class: "w-full bg-orange-400 hover:bg-orange-500 active:bg-orange-600 text-white font-semibold px-6 py-3 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 ease-out active:scale-[0.98] focus:outline-none focus:ring-4 focus:ring-orange-200 disabled:opacity-50 disabled:cursor-not-allowed min-h-[44px]" %>
        </div>
      <% end %>

      <!-- リンク -->
      <div class="mt-6 pt-6 border-t border-stone-200">
        <p class="text-sm text-stone-600 text-center">
          アカウントをお持ちでないですか？
          <%= link_to "招待リンクから登録", new_user_database_authentication_registration_path,
            class: "text-orange-500 hover:text-orange-600 active:text-orange-700 font-semibold transition-colors duration-200" %>
        </p>
      </div>
    </div>

    <!-- フッター -->
    <div class="text-center mt-6">
      <p class="text-xs text-stone-500">
        © 2025 Family App. All rights reserved.
      </p>
    </div>
  </div>
</div>
